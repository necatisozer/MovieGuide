<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/licence_key_input_layout"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:hint="@string/licence_key_hint"
            android:id="@+id/licence_key_input_edit_text"
            android:inputType="textNoSuggestions"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatButton
        style="@style/AppTheme.PrimaryButton"
        android:id="@+id/licence_key_confirm_button"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/button_padding"
        android:layout_width="wrap_content"
        android:text="@android:string/ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/licence_key_input_layout" />

</android.support.constraint.ConstraintLayout>